{
    "name": "stevecreekmore/weight-conversions",
    "description": "This is my package weight-conversions",
    "keywords": [
        "stevecreekmore",
        "weight-conversions"
    ],
    "homepage": "https://github.com/stevecreekmore/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Creekmore",
            "email": "creekmore108@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3|^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^4.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Stevecreekmore\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stevecreekmore\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --no-coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
